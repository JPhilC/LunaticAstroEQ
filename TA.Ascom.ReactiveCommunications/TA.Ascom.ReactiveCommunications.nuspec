    <id>TA.Ascom.ReactiveCommunications</id>
    <version>$version$</version>
    <title>Reactive ASCOM</title>
    <authors>Tim Long</authors>
    <owners>Tigra Astronomy</owners>
    <licenseUrl>http://tigra.mit-license.org/</licenseUrl>
